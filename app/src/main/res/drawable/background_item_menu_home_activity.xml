<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="@dimen/radius_linear_layout_home_activity"/>
            <gradient
                android:startColor="@color/background_menu_home_activity"
                android:endColor="@color/background_menu_home_activity"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="@dimen/radius_linear_layout_home_activity"/>
            <gradient
                android:startColor="@color/background_menu_home_activity_pressed"
                android:endColor="@color/background_menu_home_activity_pressed"/>
        </shape>
    </item>
</selector>
