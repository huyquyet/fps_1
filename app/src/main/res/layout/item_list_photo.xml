<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_list_photo_height"
        android:padding="@dimen/card_view_list_photo_padding"
        android:elevation="@dimen/card_view_list_photo_elevation"
        android:background="@color/background_card_view_list_photo">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/image_item_photo"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
