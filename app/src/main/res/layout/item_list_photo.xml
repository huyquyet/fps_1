<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_list_photo_height"
        android:background="@color/background_card_view_list_photo"
        android:elevation="@dimen/card_view_list_photo_elevation"
        android:padding="@dimen/card_view_list_photo_padding">

        <ImageView
            android:id="@+id/image_item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/image_view_item_list_photo_margin"
            android:scaleType="fitXY" />
    </android.support.v7.widget.CardView>
</LinearLayout>
